<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- default -->

    <style name="AppTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/new_indicator</item>
    </style>

    <!-- set default appearances -->

    <style name="microTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="smallTextStyle" parent="@android:style/TextAppearance.Small"></style>

    <style name="mediumTextStyle" parent="@android:style/TextAppearance.Medium"></style>

    <style name="rosterListItemName" parent="@style/mediumTextStyle">
        <item name="android:textColor">@color/roster_list_item_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableLeft">@drawable/general_status_offline</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/general_icon_color_chat2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="rosterListItemStatus" parent="@style/smallTextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">31dp</item>
        <item name="android:textColor">@color/roster_list_item_grey</item>
    </style>

    <style name="rosterListItemAvatarImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/general_avatar_adressbook</item>
    </style>

</resources>